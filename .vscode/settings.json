// Place your settings in this file to overwrite default and user settings.
{
	"editor.formatOnSave": true,
	"files.exclude": {
		"out": false // set this to true to hide the "out" folder with the compiled JS files
	},
	"search.exclude": {
		"out": true // set this to false to include "out" folder in search results
	},
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
	"cSpell.words": [
		"activitybar",
		"bnason",
		"eqeqeq",
		"findall",
		"findallcontainer",
		"findallinfile",
		"findallview",
		"findregexcase",
		"findregexcaseword",
		"findregexnocase",
		"findregexnocaseword",
		"findstring",
		"findstringcase",
		"findstringcaseword",
		"findstringnocase",
		"findstringnocaseword",
		"isnan",
		"linebreak",
		"macos",
		"magick",
		"mergeable",
		"mockito",
		"notest",
		"plusplus",
		"preblock",
		"tast",
		"testno",
		"vsce",
		"vsix"
	],
	"cSpell.ignorePaths": ["node_modules/**", ".vscode", "src/test/**/test.txt"]
}
